<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="StandardTextBox" TargetType="{x:Type TextBox}">
        <Setter Property="Margin" Value="0,4"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    <Style x:Key="StandardProgressBar" TargetType="{x:Type ProgressBar}">
        <Setter Property="Margin" Value="0,4"/>
    </Style>
    <Style x:Key="StandardCheckBox" TargetType="{x:Type CheckBox}">
        <Setter Property="Margin" Value="0,4,8,0"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

</ResourceDictionary>